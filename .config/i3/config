# i3 config file (v4)

# Please see http://i3wm.org/docs/userguide.html for a complete reference!

# mod4: meta, mod1: alt
set $mod Mod4

# ----------- Common startup items for all the devices ----------

# Disable terminal bell
exec "xset b off"

# Wallpaper
# Rotation can be added to crontab:
# */15 * * * * DISPLAY=:0 feh --bg-scale --randomize ~/Pictures/Wallpapers/Active/*
exec "feh --bg-scale --randomize ~/Pictures/Wallpapers/Active/*"

# Screen lock
exec --no-startup-id xautolock -time 5 -locker '/usr/local/bin/lock-screen'

# Keyboard
exec "setxkbmap en_US"

# Enable composition
exec "xcompmgr &"

# Network manager applet
exec "nm-applet &"

# Bluetooth *blueman manager
exec "blueman-applet &"

# Netcloud desktop client
exec "nextcloud &"

# Pulse audio applet
exec "pasystray &"

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Hack 8

# -----------------------------------------------------------------------------
# Keybindings
# -----------------------------------------------------------------------------

# Applications

# open vim
bindsym $mod+v exec i3-sensible-terminal -e 'vim'

# lock the laptop
bindsym $mod+Shift+q exec /usr/local/bin/lock-screen

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal
# bindsym $mod+Return exec xterm & sleep .1s && transset -m .88 -a

# kill focused window
bindsym $mod+Shift+w kill

# bindsym $mod+d exec dmenu_run
bindsym $mod+d exec dmenu_run -fn "Hack Regular:size=12"

# Control keys

# increase screen brightness
bindsym XF86MonBrightnessUp exec xbacklight -inc 20 

# decrease screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 20 

#increase sound volume
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% 

#decrease sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% 

# mute sound
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle 

# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
# bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+Shift+z split h

# split in vertical orientation
bindsym $mod+Shift+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# Workspace names
set $ws1 "1:"
set $ws2 "2:"
set $ws3 "3:"
set $ws4 "4:"

# Open certain clients in the appropiate workspace
# assign [class="^URxvt$"] $ws1
assign [class="^Firefox-esr$"] $ws2

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
