# 256 colors terminal
export TERM=xterm-256color

# Aliases
alias ls='ls --color=auto'
alias dir='dir --color=auto'
alias vdir='vdir --color=auto'

alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# Custom bash prompt for root
export PS1="\[$(tput bold)\]\[$(tput setaf 4)\][\[$(tput setaf 1)\]\u\[$(tput setaf 1)\]@\[$(tput setaf 1)\]\h \[$(tput setaf 7)\]\w\[$(tput setaf 4)\]]\\$ \[$(tput sgr0)\]"

# My visual editor will be vim
export VISUAL=vi
